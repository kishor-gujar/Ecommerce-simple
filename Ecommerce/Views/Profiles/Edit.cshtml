@model Profile

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Profile</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="DisplayName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DisplayName" class="form-control"/>
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PhoneNumber" class="form-control"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Birthdate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Birthdate" class="form-control" id="datepicker" data-date-format="yyyy-mm-dd hh:ii"/>
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Occupation" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Occupation" class="form-control"/>
                <span asp-validation-for="Occupation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProfilePicture" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <img src="~/Profiles/@Html.DisplayFor(model => model.ProfilePicture)" alt="/@Html.DisplayFor(model => model.DisplayName)"/>
                <input type="file" asp-for="ProfilePicture" class="file"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Gender" class="form-control" asp-items="@Html.GetEnumSelectList(Model.Gender.GetType())"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
 
</form>

<div>
</div>
<link href="~/lib/pikaday/css/pikaday.css" rel="stylesheet"/>
<script src="~/lib/pikaday/pikaday.js"></script>

<script>
    var picker = new Pikaday({
        field: document.getElementById('datepicker'),
        format: 'D MMM YYYY',
        onSelect: function() {
            console.log(this.getMoment().format('Do MMMM YYYY'));
        }
    });
</script>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


@section bootstrapFileinput {
    @{ await Html.RenderPartialAsync("_FileUploadPartial"); }
}